{
  "compilerOptions": {
    "rootDirs": ["./src"],
    "outDir": "/ist",
    "lib": ["es2020"],
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"],
    "allowImportingTsExtensions": true,
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "include": ["src"],
  "strict": true,
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}