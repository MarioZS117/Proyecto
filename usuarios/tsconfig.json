{
    "compilerOptions": {
        "rootDirs": ["src"],
        "outDir": "dist",
        "lib": ["ES2020"],
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "types": ["node"],
        "allowImportingTsExtensions": true,
        "declaration": true,
        "emitDeclarationOnly": true,
    },
    "include": ["src"],
    "strict": true,
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}